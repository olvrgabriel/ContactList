@model ContactModel
@{
    ViewData["Title"] = "Confirmação de exclusão de contato";
}
<div class="text-center">
    <h3>Tem certeza que deseja apagar o contato @Model.Name?</h3>
    <br />
    <a role="button" class="btn btn-danger" asp-controller="Contato" asp-route-id="@Model.Id" asp-action="Delete">Confirmar</a>
    <a role="button" class="btn btn-primary" asp-controller="Contato" asp-action="Index">Voltar</a>
</div>


